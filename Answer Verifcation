if __name__ == "__main__":
    menudisplay()
    choice = input("Enter an Option: ")
    if choice == 1 or choice == 2 or choice == 3:
        playername = raw_input("Please enter your name: ")
    menu(choice)
    addStandings(playername, Correct)
    
    
    while choice != 5 and choice != 4:
